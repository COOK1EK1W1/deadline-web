
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
}

model Programme{
  code  String @id
  title String
  courses Course[]
  year          DateTime
  password   String
}

model Course{
  code          String @id
  title         String
  D_emoji       String
  color         String
  deadlines     Deadline[]
  programme     Programme @relation(fields: [programmeCode], references: [code], onDelete: Cascade, onUpdate: Cascade)
  programmeCode String
  courseInfo    String @default("")
}

model Deadline {
  id         Int       @id @default(autoincrement())
  name       String
  type       DeadlineType @default(Coursework)
  course     Course @relation(fields: [courseCode], references: [code], onDelete: Cascade, onUpdate: Cascade)
  courseCode String
  start      DateTime?
  due        DateTime?
  mark       Float?
  room       String?
  url        String?
  info       String?
}

enum DeadlineType {
  Coursework
  Test
  Exam
}
